<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

    <form-beans>
        <form-bean name="myIbdForm"
                   type="org.apache.struts.action.DynaActionForm">
            <form-property name="diagnosisId" type="java.lang.Long"/>
            <form-property name="diseaseExtentId" type="java.lang.Long"/>
            <form-property name="complicationIds" type="java.lang.Long[]"/>
            <form-property name="bodyPartAffectedId" type="java.lang.Long"/>
            <form-property name="weight" type="java.lang.Double"/>
            <form-property name="familyHistoryId" type="java.lang.Long"/>
            <form-property name="smokingId" type="java.lang.Long"/>
            <form-property name="surgeryId" type="java.lang.Long"/>
            <form-property name="vaccinationRecordId" type="java.lang.Long"/>
        </form-bean>

        <form-bean name="carePlanForm"
                   type="org.apache.struts.action.DynaActionForm">
            <form-property name="areaToDiscussIds" type="java.lang.Long[]"/>
            <form-property name="furtherTopics" type="java.lang.String"/>
            <form-property name="goals" type="java.lang.String"/>
            <form-property name="goalToAchieve" type="java.lang.String"/>
            <form-property name="goalScale" type="java.lang.Integer"/>
            <form-property name="howToAchieveGoal" type="java.lang.String"/>
            <form-property name="barriers" type="java.lang.String"/>
            <form-property name="whatCanBeDone" type="java.lang.String"/>
            <form-property name="confidenceScale" type="java.lang.Integer"/>
            <form-property name="reviewDate" type="java.lang.String"/>
        </form-bean>

        <form-bean name="medicationForm"
                   type="org.apache.struts.action.DynaActionForm">
            <form-property name="id" type="java.lang.Long"/>
            <form-property name="dateStarted" type="java.lang.String"/>
            <form-property name="medicationTypeId" type="java.lang.Long"/>
            <form-property name="medicationId" type="java.lang.Long"/>
            <form-property name="medicationDoseId" type="java.lang.Long"/>
            <form-property name="otherMedication" type="java.lang.String"/>
            <form-property name="medicationNoOfId" type="java.lang.Long"/>
            <form-property name="medicationFrequencyId" type="java.lang.Long"/>
        </form-bean>

        <form-bean name="stopMedicationForm"
                   type="org.apache.struts.action.DynaActionForm">
            <form-property name="submit" type="java.lang.Boolean"/>
            <form-property name="id" type="java.lang.Long"/>
            <form-property name="reasonForStopping" type="java.lang.String"/>
        </form-bean>

        <form-bean name="nutritionForm"
                   type="org.apache.struts.action.DynaActionForm">
            <form-property name="nutritionDate" type="java.lang.String"/>
            <form-property name="weight" type="java.lang.Double"/>
            <form-property name="foodsThatDisagree" type="java.lang.String"/>
            <form-property name="comment" type="java.lang.String"/>
        </form-bean>

        <form-bean name="crohnsForm"
                   type="org.apache.struts.action.DynaActionForm">
            <form-property name="chornsDate" type="java.lang.String"/>
            <form-property name="abdominalPain" type="java.lang.Integer"/>
            <form-property name="openBowels" type="java.lang.Integer"/>
            <form-property name="feeling" type="java.lang.Integer"/>
            <form-property name="complications" type="java.lang.Integer"/>
            <form-property name="massInTummy" type="java.lang.Integer"/>
        </form-bean>

        <form-bean name="colitisForm"
                   type="org.apache.struts.action.DynaActionForm">
            <form-property name="colitisDate" type="java.lang.String"/>
            <form-property name="stoolsDay" type="java.lang.Integer"/>
            <form-property name="stoolsNight" type="java.lang.Integer"/>
            <form-property name="toiletTiming" type="java.lang.Integer"/>
            <form-property name="presentBlood" type="java.lang.Integer"/>
            <form-property name="feeling" type="java.lang.Integer"/>
            <form-property name="furtherComplications" type="java.lang.Integer"/>
        </form-bean>

    </form-beans>

    <action-mappings>
        <action path="/myibd"
                type="com.worthsoln.ibd.action.myibd.MyIbdAction"
                scope="request"
                parameter="ibd_myibd">
            <forward name="success" path="/ibd/myibd.jsp"/>
        </action>

        <action path="/myibd-edit"
                name="myIbdForm"
                type="com.worthsoln.ibd.action.myibd.MyIbdEditAction"
                scope="request"
                parameter="ibd_myibd">
            <forward name="success" path="/ibd/myibd-edit.jsp"/>
        </action>

        <action path="/myibd-update"
                name="myIbdForm"
                type="com.worthsoln.ibd.action.myibd.MyIbdUpdateAction"
                input="input"
                scope="request"
                validate="true"
                parameter="ibd_myibd">
            <forward name="input" path="/ibd/myibd-edit.jsp"/>
            <forward name="success" path="/myibd.do"/>
        </action>

        <action path="/careplan"
                name="carePlanForm"
                type="com.worthsoln.ibd.action.careplan.CarePlanEditAction"
                scope="request"
                parameter="ibd_careplan">
            <forward name="success" path="/ibd/careplan-edit.jsp"/>
        </action>

        <action path="/careplan-update" name="carePlanForm"
                type="com.worthsoln.ibd.action.careplan.CarePlanUpdateAction"
                input="input"
                scope="request"
                validate="true"
                parameter="ibd_careplan">
            <forward name="input" path="/ibd/careplan-edit.jsp"/>
            <forward name="success" path="/careplan.do"/>
        </action>

        <action path="/medications"
                type="com.worthsoln.ibd.action.mymedications.MyMedicationsAction"
                scope="request"
                parameter="ibd_medications">
            <forward name="success" path="/ibd/medications.jsp"/>
        </action>

        <action path="/medication-add"
                name="medicationForm"
                type="com.worthsoln.ibd.action.mymedications.MyMedicationEditAction"
                scope="request"
                parameter="ibd_medications">
            <forward name="success" path="/ibd/medication-add.jsp"/>
        </action>

        <action path="/medication-update" name="medicationForm"
                type="com.worthsoln.ibd.action.mymedications.MyMedicationUpdateAction"
                input="input"
                scope="request"
                validate="true"
                parameter="ibd_medications">
            <forward name="input" path="/ibd/medication-add.jsp"/>
            <forward name="error" path="/medications.do"/>
            <forward name="success" path="/medications.do"/>
        </action>

        <action path="/medication-stop" name="stopMedicationForm"
                type="com.worthsoln.ibd.action.mymedications.MyMedicationStopAction"
                input="input"
                scope="request"
                validate="true"
                parameter="ibd_medications">
            <forward name="input" path="/ibd/medication-stop.jsp"/>
            <forward name="success" path="/medications.do"/>
        </action>

        <action path="/nutrition"
                name="nutritionForm"
                type="com.worthsoln.ibd.action.nutrition.NutritionAction"
                scope="request"
                parameter="ibd_nutrition">
            <forward name="success" path="/ibd/nutrition.jsp"/>
        </action>

        <action path="/nutrition-edit"
                name="nutritionForm"
                type="com.worthsoln.ibd.action.nutrition.NutritionEditAction"
                scope="request"
                parameter="ibd_nutrition">
            <forward name="input" path="/ibd/nutrition-edit.jsp"/>
            <forward name="success" path="/ibd/nutrition-edit.jsp"/>
        </action>

        <action path="/nutrition-update"
                name="nutritionForm"
                type="com.worthsoln.ibd.action.nutrition.NutritionUpdateAction"
                input="input"
                scope="request"
                validate="true"
                parameter="ibd_nutrition">
            <forward name="input" path="/ibd/nutrition-edit.jsp"/>
            <forward name="success" path="/nutrition.do"/>
        </action>

        <action path="/crohns-edit"
                name="crohnsForm"
                type="com.worthsoln.ibd.action.crohns.CrohnsEditAction"
                scope="request"
                parameter="ibd_crohns">
            <forward name="success" path="/ibd/crohns.jsp"/>
        </action>

        <action path="/crohns-update"
                name="crohnsForm"
                type="com.worthsoln.ibd.action.crohns.CrohnsUpdateAction"
                input="input"
                scope="request"
                validate="true"
                parameter="ibd_crohns">
            <forward name="input" path="/ibd/crohns.jsp"/>
            <forward name="success" path="/ibd/crohns.jsp"/>
        </action>

        <action path="/colitis-edit"
                name="colitisForm"
                type="com.worthsoln.ibd.action.colitis.ColitisEditAction"
                scope="request"
                parameter="ibd_colitis">
            <forward name="success" path="/ibd/colitis.jsp"/>
        </action>

        <action path="/colitis-update"
                name="colitisForm"
                type="com.worthsoln.ibd.action.colitis.ColitisUpdateAction"
                input="input"
                scope="request"
                validate="true"
                parameter="ibd_colitis">
            <forward name="input" path="/ibd/colitis.jsp"/>
            <forward name="success" path="/ibd/colitis.jsp"/>
        </action>

    </action-mappings>

</struts-config>